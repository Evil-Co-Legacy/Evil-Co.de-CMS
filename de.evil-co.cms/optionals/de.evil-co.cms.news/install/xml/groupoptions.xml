<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.woltlab.com/XSD/group-options.xsd">
	<import>
		<categories>
			<category name="user.cms.news">
				<parent>user.cms</parent>
			</category>
		</categories>

		<options>
			<!-- user.cms.news -->
			<option name="user.cms.news.canAddItems">
				<categoryname>user.cms.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			
			<option name="user.cms.news.maxAttachmentSize">
				<categoryname>user.cms.news</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>150</defaultvalue>
			</option>
			
			<option name="user.cms.news.allowedAttachmentExtensions">
				<categoryname>user.cms.news</categoryname>
				<optiontype>textarea</optiontype>
				<defaultvalue><![CDATA[gif
jpg
jpeg
png
bmp
zip
txt]]></defaultvalue>
			</option>
			
			<option name="user.cms.news.maxAttachmentCount">
				<categoryname>user.cms.news</categoryname>
				<optiontype>integer</optiontype>
				<defaultvalue>5</defaultvalue>
			</option>
			
			<option name="user.cms.news.canEditItems">
				<categoryname>user.cms.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			
			<option name="user.cms.news.canSeeDeletedItems">
				<categoryname>user.cms.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<enableoptions>user.cms.news.canDeleteItems</enableoptions>
			</option>
			
			<option name="user.cms.news.canDeleteItems">
				<categoryname>user.cms.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
			
			<option name="user.cms.news.canSeeDisabledItems">
				<categoryname>user.cms.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
				<enableoptions>user.cms.news.canDisableItems</enableoptions>
			</option>
			
			<option name="user.cms.news.canDisableItems">
				<categoryname>user.cms.news</categoryname>
				<optiontype>boolean</optiontype>
				<defaultvalue>0</defaultvalue>
			</option>
		</options>
	</import>
</data>