<?xml version="1.0" encoding="UTF-8"?>
<data xmlns="http://www.woltlab.com" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.woltlab.com http://www.woltlab.com/XSD/options.xsd">
	<import>
		<categories>
			<category name="general.http.xslt">
				<parent>general.http</parent>
				<showorder>3</showorder>
			</category>
		</categories>
		<options>
			<!-- page settings -->
			<option name="show_version_in_copyright">
				<categoryname>general.page</categoryname>
				<optiontype>boolean</optiontype>
				<showorder>7</showorder>
				<defaultvalue>1</defaultvalue>
			</option>
			
			<option name="show_style_chooser">
				<categoryname>general.page</categoryname>
				<optiontype>boolean</optiontype>
				<showorder>8</showorder>
				<defaultvalue>1</defaultvalue>
			</option>
			
			<option name="cms_disable_wbb_updates">
				<categoryname>general.page</categoryname>
				<optiontype>boolean</optiontype>
				<showorder>9</showorder>
				<defaultvalue>0</defaultvalue>
			</option>
			
			<!-- date settings -->
			<option name="show_clock">
				<categoryname>general.date</categoryname>
				<optiontype>boolean</optiontype>
				<showorder>3</showorder>
				<defaultvalue>1</defaultvalue>
			</option>
		
			<!-- offline mode -->
			<option name="offline">
				<categoryname>general.offline</categoryname>
				<optiontype>boolean</optiontype>
				<enableoptions>offline_message</enableoptions>
				<showorder>1</showorder>
			</option>
			<option name="offline_message">
				<categoryname>general.offline</categoryname>
				<optiontype>textarea</optiontype>
				<showorder>2</showorder>
			</option>
			<option name="offline_message_allow_html">
				<categoryname>general.offline</categoryname>
				<optiontype>boolean</optiontype>
				<showorder>3</showorder>
			</option>
			
			<!-- XSLT settings -->
			<option name="xslt">
				<categoryname>general.http</categoryname>
				<optiontype>boolean</optiontype>
				<showorder>1</showorder>
			</option>
		</options>
	</import>
</data>
